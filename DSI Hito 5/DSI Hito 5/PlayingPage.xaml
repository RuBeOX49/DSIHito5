<Page
    x:Class="DSI_Hito_5.PlayingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSI_Hito_5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Invest" Height="80" Width="80" Margin="0,0,20,0"/>
            <Button Content="Ascensos" Height="80" Width="80" Margin="20,0,0,0"/>
        </StackPanel>
        
        <Button Content="End Turn"
                Grid.Column="2"
                Grid.Row="1"
                HorizontalAlignment="Right" 
                Height="80" Width="80" 
                Margin="0,0,20,0"
                Click="EndTurnButton_Click"/>

        <Ellipse Height="100" Stroke="Red" Width="100" Fill="DarkBlue" Grid.Row="1"/>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Turn" FontSize="25"/>
            <TextBlock Text="{x:Bind turnNumber, Mode=OneWay}" FontSize="25"/>
        </StackPanel>
        

    </Grid>
</Page>
