<Page
    x:Class="DSI_Hito_5.PlayingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSI_Hito_5"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <MenuFlyoutPresenter Background="MidnightBlue" HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="10" Height="100" Width="200" Margin="0, 35, 0, 0"/>
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Invest" FontSize="30" Height="130" Width="130" Margin="0,0,20,0" CornerRadius="15" BorderBrush="RoyalBlue" BorderThickness="10" Click="UpgradeButton_Click"/>
                <Button Content="Ascensos" FontSize="20" Height="130" Width="130" Margin="20,0,0,0" CornerRadius="15" BorderBrush="RoyalBlue" BorderThickness="10" Click="VillagersButton_Click"/>
            </StackPanel>

            <Button Content="End Turn"
                    Grid.Column="2"
                    Grid.Row="1"
                    HorizontalAlignment="Right" 
                    Height="100" Width="100" 
                    Margin="0,0,20,0"
                    Click="EndTurnButton_Click"
                    CornerRadius="10"
                    BorderBrush="SpringGreen" BorderThickness="10"/>

            <Ellipse Height="150"
                     Width="150"
                     Stroke="RoyalBlue"
                     StrokeThickness="10"
                     Fill="MidnightBlue"
                     Grid.Row="1"
                     />

            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Turn" FontSize="40" Foreground="White"/>
                <TextBlock Text="{x:Bind turnNumber, Mode=OneWay}" FontSize="35" HorizontalAlignment="Center" Foreground="White"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" VerticalAlignment="Top">

                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="$" FontSize="35" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White"/>
                    <TextBlock Text="{x:Bind moneyCount, Mode=OneWay}" Margin="10, 0, 0, 0" FontSize="35" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="+ $" FontSize="25" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White"/>
                    <TextBlock Text="{x:Bind moneyPerRound, Mode=OneWay}" FontSize="25" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White"/>
                    <TextBlock Text="/turn" FontSize="25" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White"/>
                </StackPanel>
            </StackPanel>




            <!--mejoras-->
            <Grid x:Name="UpgradeMenu" Visibility="Visible">
                <MenuFlyoutPresenter Background="MidnightBlue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="150" CornerRadius="30" MaxWidth="10000" MaxHeight="10000"/>
                <Button FontFamily="Segoe MDL2 Assets"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Height="100" Width="100" 
                    Margin="150"
                    Click="UpgradeBackButton_Click"
                    CornerRadius="10"
                    Background="Transparent"
                    Foreground="White">
                    <SymbolIcon Symbol="Back" Foreground="White"/>
                </Button>
                <Grid Margin="200">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="$" FontSize="35" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White"/>
                        <TextBlock Text="23 (Ej)" Margin="10, 0, 0, 0" FontSize="35" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White"/>
                    </StackPanel>

                    <ScrollViewer ZoomMode="Disabled" HorizontalScrollMode="Disabled" VerticalScrollMode="Auto" Margin="40">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="4" Grid.Row="7" Margin="20"/>
                            <Button Background="White" Width="40" Height="40" Grid.Column="4" Grid.Row="6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Background="White" Width="40" Height="40" Grid.Column="2" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Background="White" Width="40" Height="40" Grid.Column="6" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Background="White" Width="40" Height="40" Grid.Column="4" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Background="White" Width="40" Height="40" Grid.Column="7" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Background="White" Width="40" Height="40" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button Background="White" Width="40" Height="40" Grid.Column="4" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Grid>
                    </ScrollViewer>

                    <Grid Grid.Column="1" VerticalAlignment="Stretch" Margin="50, 0, 50, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Nombre Mejora" VerticalAlignment="Top" FontSize="40" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Text="Descripción: Bla babll ablab labal blaba lala Bla babll ablab labal blaba lala Bla babll ablab labal blaba lala Bla babll ablab labal blaba lala Bla babll ablab labal blaba lala Bla babll ablab labal blaba lala"
                            FontSize="26" Foreground="White" Margin="0, 10, 0, 0" TextWrapping="WrapWholeWords" Grid.Row="1"/>
                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="$" FontSize="35" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White"/>
                            <TextBlock Text="10 (Ej)" Margin="10, 0, 0, 0" FontSize="35" HorizontalAlignment="Center" FontWeight="ExtraBold" Foreground="White"/>
                        </StackPanel>
                        <Button FontFamily="Segoe MDL2 Assets"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Height="70"
                    Click="UpgradeBackButton_Click"
                    CornerRadius="15"
                    Background="RoyalBlue"
                    Foreground="White"
                    Grid.Row="3">
                            <SymbolIcon Symbol="Shop" Foreground="White"/>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
